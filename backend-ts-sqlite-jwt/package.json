{
  "name": "backend-ts-sqlite-jwt",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && npm run copy:logo",
    "start": "node dist/server.js",
    "build:db": "cross-env DATABASE_URL=file:./dist/ayher.db prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "seed:build": "tsc --project tsconfig.seed.json",
    "seed": "npm run seed:build && node dist/seed.js",
    "copy:logo": "node scripts/copy-logo.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "create-test-invoice": "ts-node scripts/create-test-invoice.ts",
    "delete-test-invoice": "ts-node scripts/delete-test-invoice.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.17.2",
    "react-toastify": "^11.0.5",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.11.30",
    "@types/pdfkit": "^0.17.3",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "prisma": "^6.18.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
